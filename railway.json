{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "api": {
      "build": {
        "builder": "nixpacks"
      }
    },
    "web": {
      "source": {
        "root": "/",
        "dockerfile": "packages/web/Dockerfile"
      },
      "build": {
        "buildArgs": {
          "VITE_API_URL": "${{VITE_API_URL}}"
        }
      }
    }
  }
}
